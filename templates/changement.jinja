{%extends base.jinnja%}
{% block main%}
<form action="/acceuil" method="get">
    <div class="d-flex justify-content-between ">
        <label for="nom_service">nom du service: </label>
        <input type="text" {%if b_changement%} value="{{service["titre"]}}" {%endif%} name="nom_service" id="nom_service" class="text-center">
    </div>
    <div class="d-flex justify-content-between ">
        <label for="choix_categorie">Catégorie: </label>
        <select name="choix_categorie" id="choix_categorie" {%if b_changement%}required{%endif%}>
            <option value=""></option>
            {% for categorie in liste_categorie %}
            <option value="{{categorie["id_categorie"]}}">{{categorie["nom_categorie"]}}</option>
            {% endfor %}
        </select>
    </div>
    <div class="d-flex justify-content-between">
        <label for="localisation_service">localisation (ville):</label>
        <input type="text" name="localisation_service" id="localisation_service" class="text-center" {%if b_changement%} value="{{service["localisation"]}}" {%endif%}>
    </div>
    <div class="d-flex justify-content-between">
        <label for="nom_service">description: </label>
        <input type="text" name="description_service" class="text-center" id="description_service" maxlength="200" {%if b_changement%} value="{{service["description"]}}" {%endif%}>
    </div>
    <div class="d-flex justify-content-between">
        <label for="cout_service">Coût: </label>
        <input type="text" name="cout_service" id="cout_service" class="chiffre text-center" {%if b_changement%} value="{{service["cout"]}}" {%endif%}>
    </div>
    <div class="d-flex justify-content-between">
        <label for="actif_service">Statut: </label>
        <input type="checkbox" name="actif_service" id="actif_service" value="1" {%if b_changement and service["actif"] == 1 %} checked {%endif%}>
    </div>
</form>
{%endblock%}
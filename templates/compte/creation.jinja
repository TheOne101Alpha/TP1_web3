{%extends 'base.jinja'%}
{%block main%}
<h1> Cr√©ation de compte </h1>

<div class="container">
    <div class="row">
        <div class="col-2">
            {% with messages = get_flashed_messages(with_categories=True)%}
                {%if messages %}
                    <ul>
                    {%for categorie, message in messages %}
                        <li class="alert alert-{{categorie}}" role="alert"> {{message}} </li>
                    {%endfor%}
                    </ul>
                {%endif%}
            {%endwith%}
        </div>

        <div class="col-10">
            <form action="/" method="post" class="">
                <div>
                    <input type="text" name="nom" id="nom" class="text-center w-50 h3" placeholder="mail / nom">
                    <div class="invalid-feedback">Le nom est obligatoire</div>
                </div>
                <div>
                    <input type="text" name="mdp" id="mdp" class="text-center w-50 h2" placeholder="mot de passe">
                    <div class="invalid-feedback">Le nom est obligatoire</div>
                </div>
                <div>
                    <select name="role" id="role" required disabled class="w-50 h2">
                        <option value="utilisateur" class="text-center">utilisateur</option>
                    </select>
                </div>
                <div><input type="submit" value="Creer"></div>
            </form>
        </div>
    </div>
</div>

{%endblock%}